<%= form_for [:direct, @post], html: { id: "direct" } do |form| %>
  <p>
    <%= @post.errors.full_messages.to_sentence %>
  </p>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :document %>
    <%= form.attachment_field :document, direct: true %>
  </p>
  <p>
    <%= form.label :documents_files %>
    <%= form.attachment_field :documents_files, multiple: true, direct: true %>
  </p>
  <p>
    <%= form.label :image %>
    <%= form.attachment_field :image, direct: true %>
  </p>
  <p>
    <%= form.label :requires_document %>
    <%= form.check_box :requires_document %>
  </p>
  <p>
    <%= form.submit "Create" %>
  </p>
<% end %>
