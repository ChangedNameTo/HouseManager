<h1>Listing users</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Email Address</th>
    <th>Phone Number</th>
    <th colspan="2">Actions</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.full_name %></td>
      <td><%= user.email_address %></td>
      <td><%= user.phone_number %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
    </tr>
  <% end %>
</table>
