  </div>

  <div class="form-group">
    <%= f.label :email_address %><br>
    <%= f.text_area :email_address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number %><br>
    <%= f.text_area :phone_number, class: 'form-control' %>
