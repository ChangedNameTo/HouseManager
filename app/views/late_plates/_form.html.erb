<%= form_for @late_plate do |f| %>
  <% if @late_plate.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@late_plate.errors.count, "error") %> prohibited
        this late plate from being saved:
      </h2>
      <ul>
        <% @late_plate.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :meal %>
    <%= f.collection_select( :meal, Meal.all, :id, :meal_name, {}, {:class=>'form-control'}) %>
  </div>

  <div class="form-group">
    <%= f.label :day %>
    <div class="input-group">
    <%= f.text_field :day, :id => "datepicker", :value => Date.today, :class=>'form-control' %>
    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
  </div>
  </br>
  <div>
    <%= f.submit 'Submit', :class => 'btn btn-default' %>
  </div>
<% end %>

<script>
$('#datepicker').datepicker({format: 'yyyy-mm-dd'});
</script>
